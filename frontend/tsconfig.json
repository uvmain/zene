{
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "lib": ["es2023", "esnext", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": [
      "node",
      "vite/client",
      "unplugin-fonts/client"
    ],
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "vite.config.*",
    "uno.config.ts",
    "components.d.ts",
    "auto-imports.d.ts",
    "./route-map.d.ts",
    "types/cast.d.ts",
    "types/butterchurn.d.ts",
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "eslint.config.js"],
  "vueCompilerOptions": {
    "plugins": [
      "vue-router/volar/sfc-typed-router",
      "vue-router/volar/sfc-route-blocks"
    ]
  }
}
