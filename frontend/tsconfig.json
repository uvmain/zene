{
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "lib": ["es2023", "esnext", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": [
      "node",
      "vite/client",
      "vitest/globals"
    ],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "vite.config.*",
    "uno.config.ts",
    "components.d.ts",
    "auto-imports.d.ts",
    "cast.d.ts",
    "src/**/*",
    "test/**/*"
  ],
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules", "dist", "eslint.config.js"]
}
